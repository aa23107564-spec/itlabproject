{
  "name": "大展網站",
  "version": "1.0.0",
  "description": "一個使用React建立的4:3螢幕比例網站專案",
  "main": "index.js",
  "scripts": {
    "start": "webpack serve --mode development",
    "build": "webpack --mode production",
    "dev": "webpack serve --mode development --open",
    "serve": "node server.js",
    "deploy": "npm run build && npm run serve",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:ci": "jest --ci --coverage --watchAll=false",
    "test:chapter2": "jest --testPathPattern=\"Chapter2|VisualNovel|DrinkCoffee|SlowTyping\" --verbose",
    "test:chapter2:coverage": "jest --testPathPattern=\"Chapter2|VisualNovel|DrinkCoffee|SlowTyping\" --coverage --verbose"
  },
  "keywords": [
    "react",
    "frontend",
    "網站",
    "4:3比例"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@react-three/drei": "^10.7.6",
    "@react-three/fiber": "^9.3.0",
    "bootstrap": "^5.3.8",
    "express": "^4.21.2",
    "framer-motion": "^12.23.22",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "react-router-dom": "^7.9.1",
    "three": "^0.180.0"
  },
  "devDependencies": {
    "@babel/core": "^7.23.0",
    "@babel/preset-env": "^7.23.0",
    "@babel/preset-react": "^7.22.0",
    "@testing-library/jest-dom": "^6.8.0",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "babel-loader": "^9.1.3",
    "css-loader": "^6.8.1",
    "html-webpack-plugin": "^5.5.3",
    "jest": "^30.1.3",
    "jest-environment-jsdom": "^30.1.2",
    "style-loader": "^3.3.3",
    "webpack": "^5.88.0",
    "webpack-cli": "^5.1.4",
    "webpack-dev-server": "^4.15.1"
  }
}
